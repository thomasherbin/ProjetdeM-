
public class Chest {
	private int treasure;

	public Chest(int caveNumber) {
		super();
		switch (caveNumber) {
		case 1:
			this.treasure = (int) (Math.random() * 3 + 1);
			break;
		case 2:
			this.treasure = (int) (Math.random() * 4 + 5);
			break;
		case 3:
			this.treasure = (int) (Math.random() * 3 + 10);
			break;
		}
	}

	public int getTreasure() {
		return treasure;
	}

	
 
}
